<mj-wrapper
  padding="10px 30px 0 30px"
  background-color="#FFFFFF"
>
  <mj-wrapper
    border-radius="5px"
    border="1px dashed #f1f1f1"
  >
<mj-section background-color="#ffffff" padding="0 10px 10px 10px">
  <mj-column>
    <mj-text
      color="#838383"
      padding="0"
      align="left"
      font-size="12px"
      font-weight="600"
    >
      Заказ
    </mj-text>
    <mj-text
      padding="5px 0 0 0"
      align="left"
      font-size="12px"
    >
      <span>Номер заказа:</span> <span style="font-weight: 600">{{this.orderId}}</span>
    </mj-text>
    <mj-text
      padding="5px 0 0 0"
      align="left"
      font-size="12px"
    >
      <span>Статус заказа:</span> <span style="font-weight: 600">{{this.status}}</span>
    </mj-text>
    <mj-text
      padding="5px 0 0 0"
      align="left"
      font-size="12px"
    >
      <span>Создан:</span> <span style="font-weight: 600">{{this.createAt}}</span>
    </mj-text>
    <mj-text
      padding="5px 0 0 0"
      align="left"
      font-size="12px"
    >
      <span>Оплаченная сумма:</span> <span style="font-weight: 600">{{this.paySum}} из {{this.totalSum}}</span>
    </mj-text>
  </mj-column>
</mj-section>
<mj-section background-color="#ffffff" padding="10px">
  <mj-column>
    <mj-text
      color="#838383"
      padding="0"
      align="left"
      font-size="12px"
      font-weight="600"
    >
      Клиент
    </mj-text>
    <mj-text
      padding="5px 0 0 0"
      align="left"
      font-size="12px"
    >
      <span>ФИО:</span> <span style="font-weight: 600">{{this.name}}</span>
    </mj-text>
    <mj-text
      padding="5px 0 0 0"
      align="left"
      font-size="12px"
    >
      <span>Телефон:</span> <span style="font-weight: 600">{{this.phone}}</span>
    </mj-text>
    <mj-text
      padding="5px 0 0 0"
      align="left"
      font-size="12px"
    >
      <span>E-mail:</span> <span style="font-weight: 600">{{this.email}}</span>
    </mj-text>
  </mj-column>
</mj-section>
<mj-section background-color="#ffffff" padding="10px">
  <mj-column>
    <mj-text
      color="#838383"
      padding="0"
      align="left"
      font-size="12px"
      font-weight="600"
    >
      Доставка
    </mj-text>
    <mj-text
      padding="5px 0 0 0"
      align="left"
      font-size="12px"
    >
      <span>Адрес доставки:</span> <span style="font-weight: 600">{{this.delivery}}</span>
    </mj-text>
  </mj-column>
</mj-section>
<mj-section background-color="#ffffff" padding="10px">
  <mj-column>
    <mj-text
      color="#838383"
      padding="0"
      align="left"
      font-size="12px"
      font-weight="600"
    >
      Товары
    </mj-text>

  </mj-column>
</mj-section>
    {{#each items}}
      <mj-wrapper
        padding="0 10px 0 10px"
        background-color="#FFFFFF"
      >
        <mj-section
          full-width="full-width"
          padding="0 0 10px 10px">
          <mj-group width="65%">
            <mj-column border-radius="5px" padding="0" vertical-align="middle" width="15%">
              <mj-image padding="0" align="left" alt="suworld" width="40px"
                src={{this.image}}></mj-image>
            </mj-column>

            <mj-column padding="0 0 0 10px" vertical-align="middle" width="85%">
              <mj-text
                css-class="order-text"
                padding="0"
                align="left"
                font-size="15px">
                <a href="https://suworld.rus">{{this.name}}</a>
              </mj-text>
            </mj-column>
          </mj-group>
          <mj-column padding="0" width="35%" vertical-align="middle">
            <mj-text
              padding="5px 0 0 0"
              align="left"
              font-size="12px"
              font-weight="600"
            >
              {{this.price}} руб. X {{this.quantity}} = {{this.price}} руб.
            </mj-text>
          </mj-column>
        </mj-section>
      </mj-wrapper>
    {{/each}}
<mj-section background-color="#ffffff" padding="10px 10px 20px 10px">
  <mj-column>
    <mj-text
      color="#838383"
      padding="0"
      align="left"
      font-size="12px"
      font-weight="600"
    >
      Оплата
    </mj-text>
    <mj-text
      padding="5px 0 0 0"
      align="left"
      font-size="12px"
    >
      <span>Сумма:</span> <span style="font-weight: 600">{{this.totalSum}} руб.</span>
    </mj-text>
    <mj-text
      padding="5px 0 0 0"
      align="left"
      font-size="12px"
    >
      <span>Оплата баллами:</span> <span style="font-weight: 600">{{this.scores}} руб.</span>
    </mj-text>
  </mj-column>
</mj-section>
<mj-section background-color="#ffffff" padding="20px 10px 10px 10px" border-top="1px dashed #f1f1f1">
  <mj-column>
    <mj-text
      padding="5px 0 0 0"
      align="left"
      font-size="12px"
    >
      <span>Итого:</span> <span style="font-weight: 600">{{this.total}} руб.</span>
    </mj-text>
  </mj-column>
</mj-section>
  </mj-wrapper></mj-wrapper>
